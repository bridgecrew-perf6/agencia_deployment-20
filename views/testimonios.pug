extends ./layout/index

block contenido
    main.container.mt-4
        h1.text-center.mt-2 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        
        include ./layout/bloque_testimonios

        .row
            .col-12
                h2.d-block.w-100.text-center Cuentanos que tal fue viajar con nosotros

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
            
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonios" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control" value= nombre)
                        .form-group
                            label(for="correo") Correo Electrónico
                            input#correo(type="email", placeholder="Tu correo", name="correo",class="form-control" value= correo)
                        .form-group
                            label(for="mensaje") Tu Opinión
                            textarea#mensaje(class="form-control", name="mensaje", placeholder="Tu mensaje", rows=3)= mensaje
                        button.btn.btn-success.btn-block(type="submit")  Enviar